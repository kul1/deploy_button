!!!
%html
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
      %title= content_for?(:title) ? yield(:title) : "Deploy"
      %meta{:content => content_for?(:description) ? yield(:description) : "Deploy", :name => "description"}
        = stylesheet_link_tag "application", :media => "all"
        = javascript_include_tag "application"
        = csrf_meta_tags
        = yield(:head)
  %body{:class => "#{controller_name} #{action_name}"}
  .container
    .row
      .col-md-8.col-md-offset-2
        = render 'layouts/messages'
        = yield
        %hr
        %p 
          Built by 
          = link_to "@southpolesteve", "https://twitter.com/southpolesteve"
          \- 
          = mail_to "southpolesteve@gmail.com"
          \-
          = link_to "Home/FAQ", root_path

